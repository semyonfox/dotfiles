{
  "layer": "top",
  "position": "top",
  "height": 36,
  "spacing": 4,
  
  "modules-left": ["custom/power", "idle_inhibitor", "custom/terminal", "custom/files", "custom/browser"],
  "modules-center": ["clock"],
  "modules-right": ["cpu", "temperature", "memory", "network", "bluetooth", "pulseaudio"],

  "custom/power": {
    "format": "⏻",
    "on-click": "wlogout",
    "tooltip": false
  },

  "custom/terminal": {
    "format": "",
    "on-click": "xdg-terminal-exec",
    "tooltip-format": "Terminal"
  },

  "custom/files": {
    "format": "",
    "on-click": "nautilus",
    "tooltip-format": "Files"
  },

  "custom/browser": {
    "format": "",
    "on-click": "brave",
    "tooltip-format": "Browser"
  },

  "clock": {
    "format": "{:%A %B %d, %Y  %H:%M}",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "month",
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "days": "<span color='#ecc6d9'>{}</span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    }
  },

  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "",
      "deactivated": ""
    },
    "tooltip-format-activated": "Caffeine mode: ON (system will not sleep)",
    "tooltip-format-deactivated": "Caffeine mode: OFF (system can sleep)"
  },

  "cpu": {
    "interval": 2,
    "format": " {usage:3}%",
    "on-click": "xdg-terminal-exec btop"
  },

  "temperature": {
    "interval": 2,
    "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
    "critical-threshold": 80,
    "format": " {temperatureC:2}°C",
    "on-click": "xdg-terminal-exec btop"
  },

  "memory": {
    "interval": 2,
    "format": "ￅ {percentage:2}%",
    "tooltip-format": "{used:0.1f}G / {total:0.1f}G used",
    "on-click": "xdg-terminal-exec btop"
  },

  "network": {
    "interval": 2,
    "format-wifi": "  {essid}",
    "format-ethernet": "  {ipaddr}",
    "format-disconnected": "冷  Disconnected",
    "tooltip-format": "{ifname}: {ipaddr}/{cidr}",
    "tooltip-format-wifi": "{essid} ({signalStrength}%)\n{ipaddr}/{cidr}",
    "on-click": "xdg-terminal-exec impala"
  },

  "bluetooth": {
    "format": "  {status}",
    "format-disabled": "  Off",
    "format-connected": "  {num_connections}",
    "tooltip-format": "{status}",
    "tooltip-format-connected": "{device_alias}",
    "on-click": "xdg-terminal-exec bluetui"
  },

  "pulseaudio": {
    "format": "{icon}  {volume:3}%",
    "format-muted": "  {volume:3}%",
    "format-icons": {
      "default": ["", "", ""]
    },
    "on-click": "xdg-terminal-exec wiremix"
  }
}
