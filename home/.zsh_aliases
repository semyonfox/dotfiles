# ======================================================================
# ALIASES - NAVIGATION
# ======================================================================
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias -- -='cd -'

# ======================================================================
# ALIASES - FILE LISTING
# ======================================================================
# Use eza if available, otherwise fallback to ls
if command -v eza &>/dev/null; then
    alias ls='eza --icons --git'
    alias ll='eza --icons --git -lha'
    alias la='eza --icons --git -a'
    alias l='eza --icons --git'
    alias lt='eza --icons --git -lha --sort=modified'
    alias tree='eza --icons --git --tree'
else
    alias ls='ls --color=auto'
    alias ll='ls -lha --color=auto'
    alias la='ls -A --color=auto'
    alias l='ls -CF --color=auto'
    alias lt='ls -lhtra --color=auto'
    alias tree='tree -C'
fi

# Use bat if available
command -v bat &>/dev/null && alias cat='bat'

# ======================================================================
# ALIASES - UTILITIES
# ======================================================================
alias c='clear'
alias h='history'
alias ports='ss -tulanp'
alias myip='curl -s ifconfig.me'
alias localip="ip -o -4 addr show | awk '{print \$4}' | cut -d/ -f1"
alias df='df -h'
alias du='du -h'
alias update='sudo pacman -Syu'

# Safe operations
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'

# App shortcuts
alias todo='dooit'
alias pomodoro='pomodoro-tui'

# ======================================================================
# ALIASES - DOCKER
# ======================================================================
# Note: oh-my-zsh docker plugin provides dps, dpsa
# We keep our custom/conflicting ones only
alias di='docker images'           # Conflicts with omz's 'dii' (docker image inspect)
alias dexec='docker exec -it'      # Shorter than omz's 'dxcit'
alias dlogs='docker logs -f'       # Custom - follow logs
alias dstop='docker stop'          # Shorter than omz's 'dstp'
alias drm='docker rm'              # Shorter than omz's full version
alias dprune='docker system prune -af'  # Custom - aggressive prune

# ======================================================================
# ALIASES - GIT
# ======================================================================
# Note: oh-my-zsh git plugin provides most common git aliases
# We keep only our custom/unique ones that differ from omz

# Custom aliases (not in omz or different)
alias gap='git add -p'             # Conflicts with omz's 'git apply' - ours is interactive add
alias gc='git commit -m'           # Quick commit with message
alias gca='git commit -am'         # Add all and commit
alias gd='git diff'                # View changes
alias gds='git diff --staged'      # View staged changes
alias gs='git status -sb'          # Short status (omz has different version)
alias gl='git log --oneline --graph --decorate'  # Pretty log
alias gll='git log --graph --pretty=format:"%C(yellow)%h%C(reset) -%C(auto)%d%C(reset) %s %C(green)(%cr) %C(bold blue)<%an>%C(reset)"'  # Detailed pretty log
